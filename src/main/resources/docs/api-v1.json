{
  "openapi": "3.0.0",
  "info": {
    "title": "KOTme API",
    "description": "See [UI version](/)",
    "version": "0.1.0"
  },
  "paths": {
    "/api/token": {
      "get": {
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "operationId": "GetToken",
        "summary": "Get token for bearer authentication",
        "description": "Token will be expired after 10 hours",
        "tags": [
          "Sign In"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/api/signup": {
      "post": {
        "operationId": "SignUp",
        "tags": [
          "Sign In"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "login",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "password",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/api/exercises": {
      "get": {
        "operationId": "GetExercises",
        "tags": [
          "Exercises"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Exercise"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/achievements": {
      "get": {
        "operationId": "GetAchievements",
        "summary": "Get all posible achievements",
        "tags": [
          "Exercises"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Achievement"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/codes": {
      "get": {
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "operationId": "GetUserCodes",
        "tags": [
          "User"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserCode"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/user/codes/{exercise}": {
      "get": {
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "operationId": "GetUserCode",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "exercise",
            "required": true,
            "description": "Item ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/UserCode"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "post": {
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "operationId": "PostUserCode",
        "summary": "Send code to check",
        "tags": [
          "User"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "exercise",
            "required": true,
            "description": "Item ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "text/plain": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/user/achievements": {
      "get": {
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "summary": "Get user achievements",
        "operationId": "GetUserAchievements",
        "tags": [
          "User"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Achievement"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Achievement": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "conditionText": {
            "type": "string"
          }
        }
      },
      "UserCode": {
        "type": "object",
        "properties": {
          "user": {
            "type": "integer"
          },
          "exercise": {
            "type": "integer"
          },
          "code": {
            "type": "string"
          },
          "uploadTime": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "Exercise": {
        "type": "object",
        "properties": {
          "number": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "lessonText": {
            "type": "string"
          },
          "exerciseText": {
            "type": "string"
          },
          "initialCode": {
            "type": "string"
          }
        }
      }
    }
  }
}